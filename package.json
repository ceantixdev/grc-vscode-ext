{
  "name": "vscode-grc-official",
  "displayName": "Graal Offical Remote Control",
  "description": "Graal Remote Control built into VSCode Originally Coded by Joey Updated by Ceantix",
  "publisher": "Ceantix",
  "version": "0.1.7",
  "repository": {
    "type": "git",
    "url": "https://github.com/ceantixdev/grc-vscode-ext.git"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:grcfs",
    "onView:serverExplorerView",
    "onView:serverListView"
  ],
  "main": "./out/src/extension.js",
  "extensionDependencies": [
    "ruanfernandes.graalscript-hl",
    "ruanfernandes.graalscript-lsp"
  ],
  "contributes": {
    "resourceLabelFormatters": [
      {
        "scheme": "grc",
        "formatting": {
          "label": "${path}",
          "separator": "/",
          "workspaceSuffix": "GitHub"
        }
      }
    ],
    "configuration": {
      "title": "Graal RC",
      "properties": {
        "graalRC.login.Nickname": {
          "type": "string",
          "default": "",
          "description": "User nickname, when empty - defaults to your account name",
          "order": 1
        },
        "graalRC.login.Account": {
          "type": "string",
          "default": "",
          "description": "Account Name",
          "order": 2
        },
        "graalRC.login.Password": {
          "type": "string",
          "default": "",
          "description": "Password",
          "order": 3
        },
        "graalRC.listServer.Address": {
          "type": "string",
          "default": "listserver.graal.in",
          "description": "Listserver Address",
          "order": 4
        },
        "graalRC.listServer.Port": {
          "type": "number",
          "default": 14922,
          "description": "Listserver Port",
          "order": 5
        },
        "graalRC.DownloadDirectory": {
          "type": "string",
          "default": "",
          "description": "Download directory for file browser operations",
          "order": 6
        },
        "graalRC.enableTimestamp": {
          "type": "boolean",
          "default": true,
          "description": "Enable timestamping in RC Chat",
          "order": 7
        }
      }
    },
    "commands": [
      {
        "command": "serverExplorerView.openResource",
        "title": "Open Resource"
      },
      {
        "command": "serverExplorerView.revealResource",
        "title": "Reveal"
      },
      {
        "command": "serverExplorerView.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "serverListView.connect",
        "title": "Connect to Server"
      },
      {
        "command": "serverListView.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "serverExplorerView.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "serverExplorerView.addNpc",
        "title": "Add a NPC",
        "icon": {
          "light": "resources/light/document.svg",
          "dark": "resources/dark/document.svg"
        }
      },
      {
        "command": "serverExplorerView.viewNpc",
        "title": "View Attributes",
        "icon": {
          "light": "resources/light/document.svg",
          "dark": "resources/dark/document.svg"
        }
      },
      {
        "command": "serverExplorerView.editScript",
        "title": "Edit Script",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "serverExplorerView.editFlags",
        "title": "Edit Flags",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "serverExplorerView.resetNpc",
        "title": "Reset"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "serverExplorerView.revealResource"
        }
      ],
      "view/title": [
        {
          "command": "serverListView.refresh",
          "when": "view == serverListView",
          "group": "navigation"
        },
        {
          "command": "serverExplorerView.refresh",
          "when": "view == serverExplorerView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "serverExplorerView.addNpc",
          "when": "view == serverExplorerView && viewItem == npcsfolder",
          "group": "0_viewnpc@0"
        },
        {
          "command": "serverExplorerView.viewNpc",
          "when": "view == serverExplorerView && viewItem == npcs",
          "group": "0_viewnpc@0"
        },
        {
          "command": "serverExplorerView.editScript",
          "when": "view == serverExplorerView && viewItem == npcs",
          "group": "0_viewnpc@1"
        },
        {
          "command": "serverExplorerView.editFlags",
          "when": "view == serverExplorerView && viewItem == npcs",
          "group": "0_viewnpc@2"
        },
        {
          "command": "serverExplorerView.resetNpc",
          "when": "view == serverExplorerView && viewItem == npcs",
          "group": "1_viewnpc@0"
        },
        {
          "command": "serverExplorerView.deleteEntry",
          "when": "view == serverExplorerView && viewItem == npcs",
          "group": "1_viewnpc@1"
        },
        {
          "command": "serverExplorerView.editScript",
          "when": "view == serverExplorerView && viewItem == weapons",
          "group": "0_viewwep@0"
        },
        {
          "command": "serverExplorerView.deleteEntry",
          "when": "view == serverExplorerView && viewItem == weapons",
          "group": "0_viewwep@1"
        },
        {
          "command": "serverExplorerView.editScript",
          "when": "view == serverExplorerView && viewItem == scripts",
          "group": "0_viewscript@0"
        },
        {
          "command": "serverExplorerView.deleteEntry",
          "when": "view == serverExplorerView && viewItem == scripts",
          "group": "0_viewscript@1"
        },
        {
          "command": "serverExplorerView.refresh",
          "when": "view == serverExplorerView",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "remote-control",
          "title": "Graal RC",
          "icon": "resources/rcicon.svg"
        }
      ]
    },
    "views": {
      "remote-control": [
        {
          "id": "serverListView",
          "name": "Serverlist"
        },
        {
          "id": "serverExplorerView",
          "name": "RC (Disconnected)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "serverListView",
        "contents": "Could not connect to the serverlist, check your settings and make sure your login credentials are correct."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "@vscode/test-electron": "^1.6.2",
    "esbuild": "^0.14.11",
    "eslint": "^8.57.1",
    "eslint-config-google": "^0.14.0",
    "glob": "^7.1.7",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.4.4",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "@ceantixdev/node-grc": "^1.2.2",
    "@vscode/vsce": "^3.6.2",
    "tiny-request-router": "^1.2.2"
  }
}
